{
  "name": "WM Segment Event Tracker",
  "manifest_version": 2,
  "version": "0.2",
  "description": "See when WM Segment events are being tracked.",
  "permissions": [
    "*://*.weedmaps.com/*",
    "*://*.internal-weedmaps.com/*",
    "*://localhost/*",
    "webRequest",
    "webRequestBlocking"
  ],
  "browser_action": {
    "default_icon": "logo.png",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "logo16.png",
    "48": "logo48.png",
    "128": "logo.png"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  }
}
